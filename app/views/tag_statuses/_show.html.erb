<div id="tag_status_explain" class="drawer"><%= link_to "<span id='tag_icon'>▼</span><span id='tag_loading' style ='display: none;'>#{image_tag('loading.gif', :alt=>'loading...', :border => 0, :height => 12, :width => 12)}</span> タグリスト".html_safe, tag_status_path, :remote => true, :method => :delete, :before => "$('tag_icon').hide(); $('tag_reload_icon').hide(); $('tag_loading').show();" -%>
  <%= link_to "<span id='tag_reload_icon'>#{image_tag('reload.png', :alt => 'Reload', :border => 0, :height => 12, :width => 12)}</span>".html_safe, tag_status_path, :remote => true, :method => :get, :before => "$('tag_icon').hide(); $('tag_reload_icon').hide(); $('tag_loading').show();" -%>
</div>
<div id="tag_status_body" style="display: none;">
<table width="100%">
<% @tags.each do |tag| %>
<tr><td><%= link_to_tag(tag) %></td></tr>
<% end %>
</table>
</div>
