  = link_to "<span id='account_status_icon'>â–¼</span><span id='account_status_loading' style ='display: none;'>#{image_tag('loading.gif', :alt=>'loading...', :border => 0, :height => 12, :width => 12)}</span> #{t('.status_of_today', date: l(today, format: :short))}".html_safe, account_status_path, :remote => true, :method => :delete, :before => "$('#account_status_icon').hide(); $('#account_status_reload_icon').hide(); $('#account_status_loading').show();"
