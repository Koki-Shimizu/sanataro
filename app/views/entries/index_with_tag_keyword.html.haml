.row
  .span12
    #warning{:style => "color: red"}
    #itemlistarea
      %p#list_item_explain
        %h3= t("entries.income_outgoing_list")
        - if @tag
          (tag: #{h @tag})
        - elsif @keyword
          (keyword: #{h @keyword})
      = render 'items_header'
      #items
        - @items.each do |it|
          = render partial: 'item', locals: { event_item: it }
        = render 'remains_link'
